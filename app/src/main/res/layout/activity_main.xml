<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="407dp"
        android:layout_height="650dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/gradient_background"
        android:overScrollMode="never"
        android:scrollbars="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/mainLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0.5in"
                android:layout_margin="5dp"

                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="0.8in"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/ic_bus_svgrepo_com">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="0.9in"

                    android:text="New Market,Royal Market, Laalghati"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:textStyle="bold">

                </TextView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0.5in"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="0.8in"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/ic_bus_svgrepo_com">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="0.9in"

                    android:text="Bima Hospital,Indrapuri"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:textStyle="bold">

                </TextView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0.5in"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="0.8in"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:elevation="3dp"
                    android:src="@drawable/ic_bus_svgrepo_com">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="0.9in"

                    android:text="Mata Mandir,Nehru Nagar"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:textStyle="bold">

                </TextView>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>

    <TextView
        android:id="@+id/Title"

        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="9dp"

        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:text="Select Route/Destination"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mainScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>